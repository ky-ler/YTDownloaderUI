<ui:FluentWindow x:Name="Main" x:Class="YTDownloaderUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YTDownloaderUI"
        xmlns:pages="clr-namespace:YTDownloaderUI.Views.Pages"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        d:DesignHeight="600"
        d:DesignWidth="900"
        d:DataContext="{d:DesignInstance local:MainWindow, IsDesignTimeCreatable=True}"
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round"
        Title="YTDownloaderUI" 
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen" 
        mc:Ignorable="d"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:NavigationView x:Name="RootNavigation" Grid.Row="1" IsPaneToggleVisible="False" IsPaneOpen="False" IsTopSeparatorVisible="False" IsFooterSeparatorVisible="False">
            <!-- <ui:NavigationView.Header>
                <ui:BreadcrumbBar
                    Margin="42,12,0,0"
                    FontSize="28"
                    FontWeight="DemiBold"
                    />
            </ui:NavigationView.Header> -->
            <!-- <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Home" TargetPageType="{x:Type pages:HomePage}" Icon="{ui:SymbolIcon Home24}"/>
            </ui:NavigationView.MenuItems> -->
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="Settings" TargetPageType="{x:Type pages:SettingsPage}" Icon="{ui:SymbolIcon Settings24}"/>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>

        <ui:TitleBar
            Title="YTDownloaderUI"
            Grid.Row="0">
        </ui:TitleBar>
    </Grid>
</ui:FluentWindow>
